#Here I assume you just installed you Debian system using the process given in the readme.

su 
apt-get install git sudo

#add yourself to sudoers
sudo usermod -a -G sudo <username>

#setup your git 
git config --global user.name "<your name>"
git config --global user.email <your email>
clone https://github.com/Sebbestune/DebConf.git
cd DebConf

------------------------------------------------------------

dpkg --add-architecture i386
apt update

apt-get install $(cat installed_packages)
apt update

#add web development and some native development
sudo npm install --global vue-native-cli react-native-cli sass

# Add more as you need, if you don't know what then maybe look at this:
# https://dev.to/bettercodingacademy/i-m-a-professional-react-developer-and-these-are-the-npm-packages-i-use-the-most-often-4lie

# Wine 
https://linuxconfig.org/how-to-install-wine-staging-on-debian-10-buster
wget -nc https://dl.winehq.org/wine-builds/winehq.key
sudo apt-key add winehq.keyÂ¨
echo "deb https://dl.winehq.org/wine-builds/debian/ buster main" | sudo tee /etc/apt/sources.list.d/wine.list
sudo apt update
wget https://download.opensuse.org/repositories/Emulators:/Wine:/Debian/Debian_10/amd64/libfaudio0_19.10-0~buster_amd64.deb
wget https://download.opensuse.org/repositories/Emulators:/Wine:/Debian/Debian_10/i386/libfaudio0_19.10-0~buster_i386.deb
sudo apt-get install libstb0:i386 libstb0
sudo dpkg -i libfaudio0_19.10-0~buster_*
sudo apt install --install-recommends winehq-staging

# and Lutris
wget https://download.opensuse.org/repositories/home:/strycore/Debian_9.0/Release.key
apt-key add Release.key

echo 'deb http://download.opensuse.org/repositories/home:/strycore/Debian_9.0/ ./' | sudo tee /etc/apt/sources.list.d/lutris.list
apt update
apt install lutris

printf "\ndeb \"http://ftp.debian.org/debian\" stretch main\ndeb-src \"http://ftp.de.debian.org/debian\" stretch main\n" | sudo tee -a /etc/apt/sources.list
sudo apt update
sudo apt install openjdk-8-jdk openjdk-8-jre

#Now for some last manual stuff
sudo update-alternatives --config java 
#answer the choise that gives the path to java 8 which should look somehting like: "/use/lib/jvm/java-8-openjdk-amd64/jre/bin/java"

./xinit-i3

#Download Command line tools only from: https://developer.android.com/studio
#It should be called something like sdk-tools-linux-*.zip (example: sdk-tools-linux-4333796.zip)

cd 
cd Downloads/
unzip sdk-tools
rm sdk-tools-linux-*.zip
sudo mv tools /opt/android-tools
cd 
printf "\nexport PATH=/opt/android-tools/:/opt/android-tools/bin:$PATH\n" | tee -a .profile
touch .android/repositories.cfg
sdkmanager --no_https --list

#Now you're all done!
